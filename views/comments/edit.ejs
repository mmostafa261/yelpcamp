
<%- include ("../partials/header.ejs"); %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;"> Edit Comment</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action= "/campgrounds/<%=campground%>/comments/<%=comment.id%>?_method=PUT" method = "POST">
                <div class="form-group">
                    <input required name="text" value="<%=comment.text%>" class="form-control" type="text" placeholder="Enter text">
                </div>
                <div class="form-group">
                    <input class = "btn btn-block btn-lg btn-primary" type = "submit">
                </div>
            </form>
            <a href="/campgrounds"> Go Back </a>
        </div>
    </div>
</div>

